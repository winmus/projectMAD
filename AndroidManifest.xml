<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.aplikasicekberatbadan">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.project.aplikasicekberatbadan.MainActivity">
        </activity>
        <activity
            android:name="com.project.aplikasicekberatbadan.HitungActivity"
            android:label="Hitung Berat Badan Ideal"
            android:parentActivityName="com.project.aplikasicekberatbadan.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.project.aplikasicekberatbadan.MainActivity"/>
        </activity>
        <activity
            android:name="com.project.aplikasicekberatbadan.TentangActivity"
            android:label="Tips Tentang Berat Badan"
            android:parentActivityName="com.project.aplikasicekberatbadan.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.project.aplikasicekberatbadan.MainActivity"/>
        </activity>
        <activity
            android:name="com.project.aplikasicekberatbadan.HasilActivity"
            android:label="Hasil BMI"
            android:launchMode="singleTask"
            android:parentActivityName="com.project.aplikasicekberatbadan.HitungActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.project.aplikasicekberatbadan.HitungActivity"/>
        </activity>
        <activity android:name="com.project.aplikasicekberatbadan.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>